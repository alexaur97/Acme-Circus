<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
    ">

	<!-- Security infrastructure -->

	<bean id="loginService" class="security.LoginService" />

	<bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />

	<!-- Access control -->

	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/" access="permitAll" />

		<security:intercept-url pattern="/favicon.ico" access="permitAll" />
		<security:intercept-url pattern="/images/**" access="permitAll" />
		<security:intercept-url pattern="/scripts/**" access="permitAll" />
		<security:intercept-url pattern="/styles/**" access="permitAll" />
		<security:intercept-url pattern="/about/**" access="permitAll" />

		<security:intercept-url pattern="/views/misc/index.jsp" access="permitAll" />

		<security:intercept-url pattern="/security/login.do" access="permitAll" />
		<security:intercept-url pattern="/security/loginFailure.do" access="permitAll" />

		<security:intercept-url pattern="/welcome/index.do" access="permitAll" />
		<security:intercept-url pattern="/circus/list.do" access="permitAll" />

		<security:intercept-url pattern="/categoryTour/administrator/**" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/actor/administrator/**" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/stats/administrator/**" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/circus/administrator/**" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/fee/administrator/**" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/administrator/administrator/create.do"
			access="hasRole('ADMINISTRATOR')" />
			<security:intercept-url pattern="/administrator/administrator/edit.do"
			access="hasRole('ADMINISTRATOR')" />

		<security:intercept-url pattern="/tour/search.do" access="permitAll" />
		<security:intercept-url pattern="/tour/list.do" access="permitAll" />
		<security:intercept-url pattern="/tour/listAll.do" access="permitAll" />
		<security:intercept-url pattern="/tour/listByCategories.do" access="permitAll" />
		<security:intercept-url pattern="/tour/show.do" access="permitAll" />


		<security:intercept-url pattern="/stop/listByTour.do" access="permitAll" />
		<security:intercept-url pattern="/stop/show.do" access="permitAll" />

		<security:intercept-url pattern="/categoryTour/list.do" access="permitAll" />

<security:intercept-url pattern="/artist/owner/list.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/artist/owner/performances.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/banner/owner/edit.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/banner/owner/myList.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/banner/owner/create.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/tour/owner/show.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/tour/owner/list.do" access="hasRole('OWNER')"/>

<security:intercept-url pattern="/organizer/owner/list.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/organizer/owner/create.do" access="hasRole('OWNER')"/>


<security:intercept-url pattern="/categoryPrice/owner/list.do" access="hasRole('OWNER')"/>

<security:intercept-url pattern="/categoryPrice/owner/edit.do" access="hasRole('OWNER')"/>
<security:intercept-url pattern="/categoryPrice/owner/delete.do" access="hasRole('OWNER')"/>

 <security:intercept-url pattern="/artist/organizer/list.do" access="hasRole('ORGANIZER')"/>
<security:intercept-url pattern="/artist/organizer/performances.do" access="hasRole('ORGANIZER')"/>
 <security:intercept-url pattern="/offer/organizer/list.do" access="hasRole('ORGANIZER')"/>
 <security:intercept-url pattern="/offer/organizer/create.do" access="hasRole('ORGANIZER')"/>
 <security:intercept-url pattern="/offer/organizer/edit.do" access="hasRole('ORGANIZER')"/>


		<security:intercept-url pattern="/customer/action-1.do" access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/customer/action-2.do" access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/tour/attendee/list.do" access="hasRole('ATTENDEE')" />
		<security:intercept-url pattern="/stop/attendee/list.do" access="hasRole('ATTENDEE')" />
		<security:intercept-url pattern="/purchase/attendee/create.do" access="hasRole('ATTENDEE')" />
		<security:intercept-url pattern="/purchase/attendee/list.do" access="hasRole('ATTENDEE')" />
		<security:intercept-url pattern="/ticket/attendee/list.do" access="hasRole('ATTENDEE')" />

		<security:intercept-url pattern="/customer/action-1.do" access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/customer/action-2.do" access="hasRole('CUSTOMER')" />

		<security:intercept-url pattern="/circus/owner/myList.do" access="hasRole('OWNER')" />
		<security:intercept-url pattern="/circus/owner/edit.do" access="hasRole('OWNER')" />
		<security:intercept-url pattern="/categoryPrice/owner/create.do" access="hasRole('OWNER')" />

		<security:intercept-url pattern="/performance/artist/list.do" access="hasRole('ARTIST')" />
		<security:intercept-url pattern="/performance/artist/edit.do" access="hasRole('ARTIST')" />
		<security:intercept-url pattern="/performance/artist/create.do" access="hasRole('ARTIST')" />
		<security:intercept-url pattern="/offer/artist/list.do" access="hasRole('ARTIST')" />
		<security:intercept-url pattern="/offer/artist/reject.do" access="hasRole('ARTIST')" />
		<security:intercept-url pattern="/offer/artist/accept.do" access="hasRole('ARTIST')" />


		<security:intercept-url pattern="/profile/action-1.do" access="isAuthenticated()" />
		<security:intercept-url pattern="/profile/action-2.do" access="isAuthenticated()" />
		<security:intercept-url pattern="/profile/action-3.do" access="isAuthenticated()" />

		<!-- <security:intercept-url pattern="/**" access="hasRole('NONE')" /> -->

		<security:intercept-url pattern="/attendee/signup.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/artist/signup.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/owner/signup.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/actor/edit.do"
			access="isAuthenticated()" />
		<security:intercept-url pattern="/message/list.do"
			access="hasRole('WORKER')" />
		<security:intercept-url pattern="/message/show.do"
			access="hasRole('WORKER')" />
		<security:intercept-url pattern="/message/delete.do"
			access="hasRole('WORKER')" />
		<security:intercept-url pattern="/message/create.do"
			access="hasRole('WORKER')" />
		<security:intercept-url pattern="/message/edit.do"
			access="hasRole('WORKER')" />




		<security:form-login
			login-page="/security/login.do"
			password-parameter="password"
			username-parameter="username"
			authentication-failure-url="/security/loginFailure.do" />

		<security:logout
			logout-success-url="/"
			invalidate-session="true" />
	</security:http>

</beans>
